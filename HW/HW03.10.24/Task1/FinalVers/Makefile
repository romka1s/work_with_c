# Имя компилятора
CC = gcc

# Флаги компилятора:
# -Wall: включить все предупреждения
# -Wextra: включить дополнительные предупреждения
# -std=c11: использовать стандарт C11
CFLAGS = -Wall -Wextra -std=c11 -O2

# Имя конечного исполняемого файла
TARGET = sort_lines

# Исходный файл
SRCS = sort_lines.c

# Объектный файл
OBJS = $(SRCS:.c=.o)

# Цель по умолчанию
all: $(TARGET)

# Правило сборки конечного исполняемого файла
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJS)

# Правило сборки объектного файла из исходного
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Правило очистки скомпилированных файлов
clean:
	rm -f $(TARGET) $(OBJS)

# Фиктивные цели
.PHONY: all clean
