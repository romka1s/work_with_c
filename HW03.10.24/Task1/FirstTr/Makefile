# Имя компилятора
CC = gcc

# Флаги компилятора:
# -Wall: включить все предупреждения
# -Wextra: включить дополнительные предупреждения
# -std=c11: использовать стандарт C11
# -O2: уровень оптимизации 2
CFLAGS = -Wall -Wextra -std=c11 -O2

# Исходные файлы
SRCS = sort_lines.c main.c

# Объектные файлы (замена .c на .o)
OBJS = $(SRCS:.c=.o)

# Имя конечного исполняемого файла
TARGET = sort_lines

# Цель по умолчанию
all: $(TARGET)

# Правило сборки конечного исполняемого файла
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJS)

# Правило сборки объектных файлов из исходных
%.o: %.c sort_lines.h
	$(CC) $(CFLAGS) -c $< -o $@

# Правило очистки скомпилированных файлов
clean:
	rm -f $(TARGET) $(OBJS)

# Правила phony (не соответствуют файлам)
.PHONY: all clean
